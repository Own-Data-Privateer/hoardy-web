{
    "manifest_version": 2,

    "icons": {
        "48": "icon/main.svg",
        "96": "icon/main.svg",
        "128": "icon/main.svg"
    },

    "browser_action": {
        "default_title": "pWebArc",
        "default_popup": "page/popup.html",
        "default_icon": {
            "48": "icon/main.svg",
            "96": "icon/main.svg",
            "128": "icon/main.svg"
        }
    },

    "background": {
        "page": "background/main.html"
    },

    "permissions": [
        "<all_urls>",
        "menus",
        "notifications",
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "pwebarc@oxij.org",
            "strict_min_version": "68.0"
        }
    }
}
