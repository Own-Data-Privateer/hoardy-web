{
    "manifest_version": 2,

    "name": "pWebArc",
    "version": "0.1",
    "description": "Private Web Archive: passively archives your web browsing HTTP requests and responses to your own private archiving server. So, a ScrapBook following \"archive everything now, figure out what to do with it later\" philosophy.",
    "icons": {
        "96": "icon/on.svg"
    },

    "homepage_url": "https://github.com/Own-Data-Privateer/pwebarc",
    "developer": {
        "name": "Jan Malakhovski",
        "url": "https://github.com/Own-Data-Privateer/pwebarc"
    },

    "browser_action": {
        "default_icon": {
            "48": "icon/on.svg"
        },
        "default_title": "pWebArc",
        "default_popup": "page/popup.html"
    },

    "background": {
        "scripts": ["lib/utils.js", "lib/cbor-s.js", "background.js"]
    },

    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "pwebarc@oxij.org",
            "strict_min_version": "68.0"
        }
    }
}
